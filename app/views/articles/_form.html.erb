<%= form_with scope: :article, url: article_create_path, local: true do |f| %>
        <%# url attr is where the user is redirected once the form is submitted
        url: use alias for value; you can view aliases by issuing the command:
        rails routes outside rails console %>

    <div>
        <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li class="alert alert-danger" role="alert" ><%= msg %></li>
            <% end %>
        </ul>
        <% end %>
    </div>


    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :body %>
        <%= f.text_area :body, size: '100x7' %>
    </div>

    <div>
        <%= f.submit :Post, class: 'btn btn-primary'%>
    </div>

<% end %>